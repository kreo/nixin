@import "axis"
@import "rupture"
@import "jeet"
@import "typographic"

/* --- Axis --------------------------------------------------------------- */
// img-path = nix.images.path
// font-stack = nix.type.family
// font-size = nix.type.size
// font-color = nix.type.color

normalize-css()
border-box-html()
fluid-media()


/* --- Rupture ------------------------------------------------------------ */
rupture.scale = nix.mq.xxs nix.mq.xs nix.mq.sm nix.mq.md nix.mq.lg
rupture.scale-names = keys(nix.mq)
rupture.enable-em-breakpoints = true


