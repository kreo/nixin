// fonts
// font-roboto = nix.text.family.primary + "," + nix.text.family.default
// font-fira = nix.text.family.secondary + "," + nix.text.family.default

// config
$line-height-ratio   = 1.75
$heading-ratio       = $golden
// $body-font           = font-roboto
$body-font-weight    = 300
// $heading-font        = font-fira
$heading-font-weight = 300
$min-font            = 13px
$max-font            = 17px
$min-width           = 320px
$max-width           = 1200px
$vertical-rhythm     = true

typographic()
