/* ------------------------------------------------------------------------ *\
   structure.mixins.element.table
\* ------------------------------------------------------------------------ */


table()
  display: flex
  flex-wrap: wrap
  width: 100%
  margin: 0
  padding: 0
  border-collapse: collapse
  border-spacing: 0


table__caption()
  letter-box--small()
  text--quiet()
  display: flex
  flex: 0 0 100%
  max-width: 100%
  font-size: $text-font-size * .9
  text-align: left


table__row()
  display: flex
  flex-wrap: wrap
  flex: 0 0 100%
  max-width: 100%


table__row--striped()
  background-color: $color-lighter-grey


table__cell()
  window-box--small()
  display: flex
  flex: 1
  text-align: left
  overflow: auto


table__heading()
  heading--xsmall()
  display: flex
  flex: 1
  font-weight: bold
  background-color: $color-light-grey
  border-bottom: 1px solid $color-grey


table__heading--striped()
  background-color: initial


table-clickable()
  color: $color-primary
  cursor: pointer


table-inactive()
  text--quiet()
  cursor: default


table-clickable--inactive()
  text--quiet()
  cursor: not-allowed


table--condensed()
  font-size: $text-font-size * .9


table__cell--condensed()
  window-box--xsmall()
