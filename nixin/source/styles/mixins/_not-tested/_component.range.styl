/* ------------------------------------------------------------------------ *\
   structure.mixins.component.range
\* ------------------------------------------------------------------------ */


nix-range()
  nix-padding--horizontal--sm()
  width: 100%
  -webkit-appearance: none
  outline: none


nix-range__track()
  width: 100%
  height: 10px
  border: 0
  border-radius: 30em
  box-shadow: none
  cursor: pointer


nix-range__track--ms()
  background-color: transparent
  border-color: transparent
  color: transparent


nix-range__fill--ms()
  background-color: nix.colors.primary
  border: 0
  border-radius: 0
  box-shadow: none


nix-range__thumb()
  nix-size(20px 20px)
  margin-top: -5px
  border: 0
  background-color: nix.colors.white
  border-radius: 30em
  box-shadow: 0 1px 4px -1px nix.colors.black
  cursor: pointer


nix-range__thumb--focus()
  border: 1px solid nix.colors.blue
  box-shadow: inset 0 0 0 2px nix.colors.light-blue


nix-range__thumb--webkit()
  -webkit-appearance: none


nix-range__thumb--active()
  transform: scale(1.4)


nix-range--disabled()
  background-color: nix.colors.lighter-grey
  cursor: not-allowed


nix-range--color(track-color = nix.colors.default)
  &:not(:disabled)
    &::-webkit-slider-runnable-track
      background-color: track-color

    &::-moz-range-track
      background-color: track-color

    &::-ms-track
      background-color: track-color
