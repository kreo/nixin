/* ------------------------------------------------------------------------ *\
   mixins.util.divider
\* ------------------------------------------------------------------------ */


/**
 * [divider description]
 * @return {[type]} [description]
 */
nix-divider()
  nix-margin--vertical--md()
  nix-reset--clear--fix()
  width: 100%
  line-height: nix.sizes.sm


/**
 * [solid description]
 * @return {[type]} [description]
 */
nix-divider--thick--solid()
  nix-border--bottom(6px, solid)


/**
 * [dashed description]
 * @return {[type]} [description]
 */
nix-divider--thick--dashed()
  nix-border--bottom(6px, dashed)


/**
 * [dotted description]
 * @return {[type]} [description]
 */
nix-divider--thick--dotted()
  nix-border--bottom(6px, dotted)


/**
 * [solid description]
 * @return {[type]} [description]
 */
nix-divider--thin--solid()
  nix-border--bottom(1px, solid)


/**
 * [dashed description]
 * @return {[type]} [description]
 */
nix-divider--thin--dashed()
  nix-border--bottom(1px, dashed)


/**
 * [dotted description]
 * @return {[type]} [description]
 */
nix-divider--thin--dotted()
  nix-border--bottom(1px, dotted)


/**
 * [solid description]
 * @return {[type]} [description]
 */
nix-divider--single--solid()
  nix-border--vertical(1px, solid)
  height: 1px


/**
 * [dashed description]
 * @return {[type]} [description]
 */
nix-divider--single--dashed()
  nix-border--vertical(1px, dashed)
  height: 1px


/**
 * [dotted description]
 * @return {[type]} [description]
 */
nix-divider--single--dotted()
  nix-border--vertical(1px, dotted)
  height: 1px


/**
 * [solid description]
 * @return {[type]} [description]
 */
nix-divider--double--solid()
  nix-border--vertical(2px, solid)
  height: 6px


/**
 * [dashed description]
 * @return {[type]} [description]
 */
nix-divider--double--dashed()
  nix-border--vertical(2px, dashed)
  height: 6px


/**
 * [double description]
 * @param  {[type]} style =             dotted [description]
 * @return {[type]}       [description]
 */
nix-divider--double(style = dotted)
  nix-border--vertical(2px, style)
  height: 6px


/**
 * [divider__content description]
 * @return {[type]} [description]
 */
nix-divider__content()
  nix-container()
  display: inline-block
  width: 100%
  line-height: nix.sizes.sm
  background: #F0ECE8
