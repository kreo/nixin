/* ------------------------------------------------------------------------ *\
   structure.mixins.reset
\* ------------------------------------------------------------------------ */


/**
 * [clear description]
 * @return {[type]} [description]
 */
nix-clear()
  overflow: auto
  zoom: 1


/**
 * [clearFix description]
 * @return {[type]} [description]
 */
nix-clearFix()
  zoom: 1
  &::after
    display: table
    clear: both
    content: ""


/**
 * [setReset description]
 */
nix-setReset()
  for prop, value in nix.reset
    for arg in arguments
      if(prop == arg[0])
        {arg[0]}: value


/**
 * [setReset description]
 */
nix-reset()
  for prop, value in nix.reset
    [{selector}~=\"--{prop}\"]
      {prop}: value
