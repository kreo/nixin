/* ------------------------------------------------------------------------ *\
   structure.mixins.component.overlay
\* ------------------------------------------------------------------------ */


overlay--color($bg-color: $color-black)
  background-color: transparentize($bg-color, .6)


overlay()
  overlay--color()
  display: block
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 100%
  height: 100%
  z-index: $z-over-screen


overlay--fullpage()
  position: fixed


overlay--transparent()
  background-color: transparent


overlay--dismissable()
  cursor: pointer
