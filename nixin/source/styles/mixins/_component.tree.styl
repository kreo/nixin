/* ------------------------------------------------------------------------ *\
   structure.mixins.component.tree
\* ------------------------------------------------------------------------ */


tree()
  window-box--none()
  display: block
  margin: 0
  list-style: none


tree--nested()
  padding: 0 0 0 $spacing-medium


tree__item()
  window-box--none()

  &:before
    content: "â€“"
    display: inline-block
    padding: 0 $spacing-small 0 0
    color: $color-light-grey
    transform-origin: 30% 50%


tree__item--expandable()
  &:before
    color: $color-grey
    content: "\276F"


tree__item--expanded()
  &:before
    color: $color-darker-grey
    content: "\276F"
    transform: rotate(90deg)
