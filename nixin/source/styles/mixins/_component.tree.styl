/* ------------------------------------------------------------------------ *\
   structure.mixins.component.tree
\* ------------------------------------------------------------------------ */


/**
 * [tree description]
 * @return {[type]} [description]
 */
nix-tree()
  nix-padding--all--0()
  display: block
  margin: 0
  list-style: none


/**
 * [nested description]
 * @return {[type]} [description]
 */
nix-tree--nested()
  padding: 0 0 0 nix.sizes.md


/**
 * [tree__item description]
 * @return {[type]} [description]
 */
nix-tree__item()
  nix-padding--all--0()

  &:before
    content: "â€“"
    display: inline-block
    padding: 0 nix.sizes.sm 0 0
    color: nix.colors.light-grey
    transform-origin: 30% 50%


/**
 * [expandable description]
 * @return {[type]} [description]
 */
nix-tree__item--expandable()
  &:before
    color: nix.colors.grey
    content: "\276F"


/**
 * [expanded description]
 * @return {[type]} [description]
 */
nix-tree__item--expanded()
  &:before
    color: nix.colors.darker-grey
    content: "\276F"
    transform: rotate(90deg)
