/* ------------------------------------------------------------------------ *\
   structure.mixins.module.menu
\* ------------------------------------------------------------------------ */


menu()
  list--unstyled()
  card()
  display: block
  width: 100%
  margin-top: $spacing-xsmall
  background-color: $color-white
  border-radius: $border-radius
  overflow-y: auto
  overflow-x: hidden
  -webkit-overflow-scrolling: touch
  max-height: 280px
  z-index: $z-over-content


menu__item()
  card__item()
  cursor: pointer


menu__item--divider()
  text--quiet()
  font-weight: $text-font-weight-heavy


menu__item--hover()
  card__item--hover()
  background-color: $color-lighter-grey


menu__item--active()
  background-color: $color-lighter-grey
  font-weight: $text-font-weight-heavy


menu__item--disabled()
  text--quiet()
  cursor: not-allowed


menu--high()
 card--high()


menu--higher()
  card--higher()


menu--highest()
  card--highest()
