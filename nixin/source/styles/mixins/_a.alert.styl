/* ------------------------------------------------------------------------ *\
   mixins.animation.alert
\* ------------------------------------------------------------------------ */


/**
 * [alert__keyframes description]
 * @return {[type]} [description]
 */
a-alert__keyframes()
  @keyframes alert
    from
      transform: scale3d(0, 0, 0)
      opacity: 0

    50%
      transform: scale3d(1.02, 1.02, 1.02)

    80%
      transform: scale3d(.95, .95, .95)

    to
      transform: scale3d(1, 1, 1)
      opacity: 1


/**
 * [alert description]
 * @return {[type]} [description]
 */
a-alert()
  animation-name: alert
  animation-duration: nix.animations.duration
  animation-fill-mode: both
  animation-timing-function: nix.animations.easing


/**
 * [top description]
 * @return {[type]} [description]
 */
a-alert--top()
  transform-origin: center top


/**
 * [bottom description]
 * @return {[type]} [description]
 */
a-alert--bottom()
  transform-origin: center bottom


/**
 * [left description]
 * @return {[type]} [description]
 */
a-alert--left()
  transform-origin: left center


/**
 * [right description]
 * @return {[type]} [description]
 */
a-alert--right()
  transform-origin: right center


/**
 * [slow description]
 * @return {[type]} [description]
 */
a-alert--slow()
  animation-duration: nix.animations.duration-slow


/**
 * [fast description]
 * @return {[type]} [description]
 */
a-alert--fast()
  animation-duration: nix.animations.duration-fast
