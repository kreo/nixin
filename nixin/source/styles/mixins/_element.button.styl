/**
 * [color description]
 * @param  {[type]} bg-color: color-default [description]
 * @param  {[type]} fg-color: color-white   [description]
 * @return {[type]}           [description]
 */
nix-button--color(bg-color: color-default, fg-color: color-white)
  background-color: bg-color
  color: fg-color
  border: 1px solid transparent

  &:not(:disabled)
    &:hover
      background-color: lighten(bg-color, color-tint)

    &:focus
      border: 1px solid color-blue
      box-shadow: inset 0 0 0 2px color-light-blue

    &:active, .button--active
      background-color: darken(bg-color, color-tint)


/**
 * [ghost description]
 * @param  {[type]} color:            color-default [description]
 * @param  {[type]} hover-text-color: color-white   [description]
 * @return {[type]}                   [description]
 */
nix-button--ghost(color: color-default, hover-text-color: color-white)
  background-color: transparent
  border: 1px solid color
  color: color

  &:not(:disabled)
    &:hover
      background-color: color
      color: hover-text-color

    &:focus {
      border: 1px solid color-blue;
      box-shadow: inset 0 0 0 2px color-light-blue;
    }

    &:active, .button--active
      background-color: darken(color, color-tint)
      border: 1px solid darken(color, color-tint)
      color: hover-text-color


/**
 * [button description]
 * @return {[type]} [description]
 */
nix-button()
  +nix-padding--all--sm()
  +nix-text-size--medium()
  +nix-button--color()
  display: inline
  margin: 0
  max-width: 100%
  border-radius: nix.border.radius
  border: 0
  outline: 0
  overflow: hidden
  text-decoration: none
  text-transform: uppercase
  text-overflow: ellipsis
  white-space: nowrap
  vertical-align: middle
  cursor: pointer
  user-select: none
  appearance: none


  &:disabled
    background-color: nix.colors.lighter-grey
    font-style: italic
    cursor: not-allowed
    +nix-text--quiet()


/**
 * [rounded description]
 * @return {[type]} [description]
 */
nix-button--rounded()
  border-radius: nix.border.radius-rounded


/**
 * [close description]
 * @return {[type]} [description]
 */
nix-button--close()
  +nix-button--color(transparent, inherit);
  +nix-text--loud()
  +nix-padding--all--0()
  outline: 0
  position: absolute
  right: nix.sizes.md
  font-size: 1.4em
  line-height: 1


/**
 * [block description]
 * @return {[type]} [description]
 */
nix-button--block()
  display: inline-block
  width: 100%


