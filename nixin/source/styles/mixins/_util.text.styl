/* ------------------------------------------------------------------------ *\
   structure.mixins.util.text
\* ------------------------------------------------------------------------ */


text--ellipsis(no-wrap = true)
  overflow: hidden
  text-overflow: ellipsis
  if no-wrap
    white-space: nowrap


text--hide()
  overflow: hidden
  text-indent: 110%
  white-space: nowrap


text--direction(direction)
  text-align: direction


text--create(selector)
  for size in nix.fonts.sizes
    [{selector}~=\"--{size}\"]
      font-size: nix.fonts.sizes[size]


text()
  font-family: $text-font-family
  font-weight: $text-font-weight
  color: $color-black
  line-height: $text-line-height
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  text-rendering: optimizeLegibility


text--mono()
  font-family: $text-font-family-mono


text--highlight()
  background-color: $color-yellow
  color: $color-black
  padding: $spacing-xsmall $spacing-xsmall $spacing-tiny
  margin: 0 -$spacing-tiny


text--quiet()
  color: $color-default


text--loud()
  font-weight: $text-font-weight-heavy


text--help()
  cursor: help
  border-bottom: 1px dashed $color-dark-grey


text-size--super()
  font-size: $text-font-size * 3


text-size--xlarge()
  font-size: $text-font-size * 2


text-size--large()
  font-size: $text-font-size * 1.5


text-size--medium()
  font-size: $text-font-size


text-size--small()
  font-size: $text-font-size * .9


text-size--xsmall()
  font-size: $text-font-size * .7


paragraph()
  display: block
  padding: $spacing-small 0
  margin: 0
  font-style: normal


code()
  text--highlight()
  display: inline
  background-color: $color-lighter-grey
  font-family: $text-font-family-mono
  font-weight: $text-font-weight


code--multiline()
  display: block
  white-space: pre
  padding: $spacing-small $spacing-medium
  overflow-x: auto
  border-radius: $border-radius


keyboard-keys {
  code()
  background-color: $color-primary
  color: $color-white
  border-radius: 4px
  border-bottom: 2px solid $color-darker-primary


quotation()
  display: block
  margin: 0
  padding: $spacing-medium $spacing-large
  border-left: 5px solid $color-grey
  font-family: $text-font-family-serif


quotation__body()
  paragraph()
  font-size: $text-font-size * 1.3


quotation__footer()
  paragraph()
  text--quiet()
  font-style: italic
  
