/* ------------------------------------------------------------------------ *\
   structure.mixins.util.position
\* ------------------------------------------------------------------------ */


/**
 * [position description]
 * @return {[type]} [description]
 */
nix-position()
  position: arguments
  z-index: 1 unless @z-index


/*
 * Position utility.
 *
 * Synopsis:
 *
 *   fixed: <pos> [n] <pos> [n]
 *
 * Examples:
 *
 *     fixed: top left
 *     fixed: top 5px left
 *     fixed: top left 5px
 *     fixed: top 5px left 5px
 *
 */

nix-position--fixed()
  -pos("fixed", arguments)

