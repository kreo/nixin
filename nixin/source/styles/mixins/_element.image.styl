/* ------------------------------------------------------------------------ *\
   structure.mixins.element.image
\* ------------------------------------------------------------------------ */


image--responsive()
  display: block
  max-width: 100%
  height: auto


image--background(name, size = null, position = center, repeat = no-repeat)
  bg = nix.images.path + name
  background-image: url(bg)
  if size !null
      background-size: size
  background-position: position
  background-repeat: repeat
