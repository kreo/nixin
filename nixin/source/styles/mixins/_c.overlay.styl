/* ------------------------------------------------------------------------ *\
   mixins.component.overlay
\* ------------------------------------------------------------------------ */


@import "_u.position"


/**
 * [color description]
 * @param  {[type]} bg-color =             nix.colors.black [description]
 * @return {[type]}          [description]
 */
c-overlay--color(bg-color = nix.skin.color.black)
  background-color: transparentify(bg-color, .6)


/**
 * [overlay description]
 * @return {[type]} [description]
 */
c-overlay()
  c-overlay--color()
  u-position(absolute 0 0 0 0)
  display: block
  width: 100%
  height: 100%
  z-index: nix.z.top


/**
 * [fullpage description]
 * @return {[type]} [description]
 */
c-overlay--fullpage()
  position: fixed


/**
 * [transparent description]
 * @return {[type]} [description]
 */
c-overlay--transparent()
  background-color: transparent


/**
 * [dismissable description]
 * @return {[type]} [description]
 */
c-overlay--dismissable()
  cursor: pointer
