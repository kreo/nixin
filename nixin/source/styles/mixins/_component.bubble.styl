/* ------------------------------------------------------------------------ *\
   structure.mixins.bubble
\* ------------------------------------------------------------------------ */


/**
 * [bubble description]
 * @return {[type]} [description]
 */
nix-bubble()
  nix-padding--all--md()
  position: relative
  display: inline-block
  border-radius: nix.border.radius
  background-color: nix.colors.black
  color: nix.colors.white
  text-align: center
  white-space: nowrap


/**
 * [bubble__arrow description]
 * @return {[type]} [description]
 */
nix-bubble__arrow()
  &:after
    position: absolute
    display: block
    width: 0
    height: 0
    border: 10px solid transparent
    content: ""


/**
 * [top description]
 * @return {[type]} [description]
 */
nix-bubble__arrow--top()
  &:after
    bottom: -20px
    left: 50%
    transform: translate3d(-50%, 0, 0)
    border-top-color: nix.colors.black


/**
 * [right description]
 * @return {[type]} [description]
 */
nix-bubble__arrow--right()
  &:after
    top: 50%
    left: -20px
    transform: translate3d(0, -50%, 0)
    border-right-color: nix.colors.black


/**
 * [bottom description]
 * @return {[type]} [description]
 */
nix-bubble__arrow--bottom()
  &:after
    top: -20px
    left: 50%
    transform: translate3d(-50%, 0, 0)
    border-bottom-color: nix.colors.black



/**
 * [left description]
 * @return {[type]} [description]
 */
nix-bubble__arrow--left()
  &:after
    top: 50%
    right: -20px
    transform: translate3d(0, -50%, 0)
    border-left-color: nix.colors.black
