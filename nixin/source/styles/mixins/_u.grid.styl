/**
 * [fit description]
 * @return {[type]} [description]
 */
u-grid__cell--fit()
  flex: 1


/**
 * [full description]
 * @return {[type]} [description]
 */
u-grid--full()
  flex-wrap: wrap


/**
 * [full description]
 * @return {[type]} [description]
 */
u-grid__cell--full()
  flex: 0 0 100%
  margin-left: 0
  max-width: 100%


/**
 * [width description]
 * @param  {[type]} cols [description]
 * @return {[type]}      [description]
 */
u-grid__cell--width(cols)
  cols = cols * 1%
  max-width: cols

  if cols == 100
    flex: 1
  else
    flex: 0 0 cols


/**
 * [offset description]
 * @param {[type]} cols [description]
 */
u-grid__cell--offset(cols)
  margin-left: cols * 1%


