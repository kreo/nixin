/* ------------------------------------------------------------------------ *\
   structure.mixins.component.tab
\* ------------------------------------------------------------------------ */


/**
 * [tabs description]
 * @return {[type]} [description]
 */
nix-tabs()
  display: block


/**
 * [tabs__headings description]
 * @return {[type]} [description]
 */
nix-tabs__headings()
  display: flex
  text-align: center
  cursor: pointer


/**
 * [heading description]
 * @return {[type]} [description]
 */
nix-tab-heading()
  nix-padding--all--md()
  flex: 1
  margin: 0
  box-shadow: 0 -.2em 0 0 nix.skin.gray inset


/**
 * [color description]
 * @param  {[type]} active-color =             nix.colors.default [description]
 * @return {[type]}              [description]
 */
tab-heading--color(active-color = nix.skin.default)
  box-shadow: 0 -.2em 0 0 active-color inset


/**
 * [disabled description]
 * @return {[type]} [description]
 */
nix-tab-heading--disabled()
  nix-text--quiet()
  cursor: not-allowed


/**
 * [tabs__tab description]
 * @return {[type]} [description]
 */
nix-tabs__tab()
  nix-padding--all--md()
  display: none


/**
 * [active description]
 * @return {[type]} [description]
 */
nix-tabs__tab--active()
  display: block
