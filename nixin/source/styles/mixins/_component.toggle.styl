/* ------------------------------------------------------------------------ *\
   structure.mixins.component.toggle
\* ------------------------------------------------------------------------ */


toggle()
  letter-box--small()
  display: block
  width: 60px
  height: 20px
  margin: 0
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none


toggle__wrapper()
  position: absolute
  cursor: pointer
  width: auto
  min-height: 1em
  padding-left: 50px


toggle__wrapper--right()
  padding-right: 50px
  padding-left: 0


toggle__checkbox()
  display: none


toggle__track--color($track-color: $color-default)
  background-color: $track-color


toggle__track()
  toggle__track--color()
  position: absolute
  top: 50%
  bottom: 0
  left: 0
  right: 0
  width: 40px
  height: 10px
  margin-top: -5px
  border-radius: 30em


toggle__track--unchecked()
  background-color: $color-lighter-grey


toggle__track--right()
  left: auto


toggle__track--disabled()
  background-color: $color-lighter-grey
  cursor: not-allowed


toggle__handle()
  position: absolute
  top: -5px
  left: 0
  width: 20px
  height: 20px
  background-color: $color-white
  border-radius: 30em
  box-shadow: 0 1px 4px -1px $color-black
  transform: translate3d(100%, 0, 0)


toggle__handle--unchecked()
  transform: translate3d(0, 0, 0)


toggle__handle--disabled()
  background-color: $color-lighter-grey
  cursor: not-allowed
