/* ------------------------------------------------------------------------ *\
   structure.mixins.component.range
\* ------------------------------------------------------------------------ */


range()
  letter-box--small()
  outline: 0
  -webkit-appearance: none
  width: 100%


range__track()
  width: 100%
  height: 10px
  border-radius: 30em
  border: 0
  box-shadow: none
  cursor: pointer


range__track--ms()
  background-color: transparent
  border-color: transparent
  color: transparent


range__fill--ms()
  background-color: $color-primary
  border: 0
  border-radius: 0
  box-shadow: none


range__thumb()
  height: 20px
  width: 20px
  margin-top: -5px
  border: 0
  background-color: $color-white
  border-radius: 30em
  box-shadow: 0 1px 4px -1px $color-black
  cursor: pointer


range__thumb--focus()
  border: 1px solid $color-blue
  box-shadow: inset 0 0 0 2px $color-light-blue


range__thumb--webkit()
  -webkit-appearance: none


range__thumb--active()
  transform: scale(1.4)


range--disabled()
  background-color: $color-lighter-grey
  cursor: not-allowed


range--color($track-color: $color-default)
  &:not(:disabled)
    &::-webkit-slider-runnable-track
      background-color: $track-color

    &::-moz-range-track
      background-color: $track-color

    &::-ms-track
      background-color: $track-color
