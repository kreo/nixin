/* ------------------------------------------------------------------------ *\
   utils.skel
\* ------------------------------------------------------------------------ */

/**
 * settings
 */
name = "skel"
selector = prefix + name


/* styles
\* ------------------------------------------------------------------------ */

/**
 * page
 * a. default: 100% content
 */
[{selector}~="container"]
  u-skel()


/**
 * page
 * b. --unboxed: 100% with boxed content
 */
[{selector}~="--unboxed"] [{selector}~="__wrap"]
  u-skel--unboxed__wrap()


/**
 * page
 * c. --boxed: totally boxed content
 */
[{selector}~="--boxed"]
  u-skel--boxed()


/**
 * __wrap
 * boxed: boxed content
 */
[{selector}~="__wrap"]
  u-skel__wrap()


/**
 * __row
 * boxed: boxed cols
 */
[{selector}~="__row"]
  u-skel__row()
