/**
 * settings
 */
name = "debug"
selector = prefix + name


/* styles
\* ------------------------------------------------------------------------ */
[{selector}~="container"]
  c-debug()


[{selector}~="__heading"]
  c-debug__heading()


[{selector}~="__close"]
  c-debug__close()


[{selector}~="@xxs"]
  c-debug--xxs()


[{selector}~="@xs"]
  c-debug--xs()


[{selector}~="@sm"]
  c-debug--sm()


[{selector}~="@md"]
  c-debug--md()


[{selector}~="@lg"]
  c-debug--lg()


[{selector}~="@xl"]
  c-debug--xl()


[{selector}~="@xxl"]
  c-debug--xxl()
