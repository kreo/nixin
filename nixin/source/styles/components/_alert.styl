/* ------------------------------------------------------------------------ *\
   components.alert
\* ------------------------------------------------------------------------ */


/**
 * settings
 */
name = "alert"
selector = prefix + name


/* styles
\* ------------------------------------------------------------------------ */

[{selector}~="container"]
  c-alert()


[{selector}~="__content"]
  c-alert__content()


[{selector}~="--primary"]
  c-alert__content--color(nix.skin.color.primary)


[{selector}~="--secondary"]
  c-alert__content--color(nix.skin.color.secondary)


[{selector}~="--success"]
  c-alert__content--color(nix.skin.color.success)


[{selector}~="--warning"]
  c-alert__content--color(nix.skin.color.warning)


[{selector}~="--error"]
  c-alert__content--color(nix.skin.color.error)


