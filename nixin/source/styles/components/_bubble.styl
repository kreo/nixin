/* ------------------------------------------------------------------------ *\
   components.bubble
\* ------------------------------------------------------------------------ */


/**
 * settings
 */
name = "bubble"
selector = prefix + name


/* styles
\* ------------------------------------------------------------------------ */

[{selector}]
  nix-bubble()


[{selector}~=\"__arrow\"]
  nix-bubble__arrow()

  &[{selector}~=\"--top\"]
    nix-bubble__arrow--top()

  &[{selector}~=\"--right\"]
    nix-bubble__arrow--right()

  &[{selector}~=\"--bottom\"]
    nix-bubble__arrow--bottom()

  &[{selector}~=\"--left\"]
    nix-bubble__arrow--left()
