/* ------------------------------------------------------------------------ *\
   components.card
\* ------------------------------------------------------------------------ */


/**
 * settings
 */
name = "card"
selector = prefix + name


/* styles
\* ------------------------------------------------------------------------ */

[{selector}~="container"]
  c-card()

  + [{selector}~="container"]
    c-card--spacing()

  [{prefix}paragraph]:first-child,
  [{prefix}paragraph]:last-child
    c-card__first-last-paragraph()


[{selector}~="__content"]
  c-card__content()

  &[{selector}~="--divider"]
    c-card__content--divider()


[{selector}~="__item"]
  c-card__item()


[{selector}~="__item"]
  &[{selector}~="--divider"]
    c-card__item--divider()


[{selector}~="--high"]
  c-card--high()


[{selector}~="--higher"]
  c-card--higher()


[{selector}~="--highest"]
  c-card--highest()
