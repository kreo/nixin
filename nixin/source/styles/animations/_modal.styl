/* ------------------------------------------------------------------------ *\
   animations.modal
\* ------------------------------------------------------------------------ */


/**
 * settings
 */
name = "modal"
selector = prefix + name


/* styles
\* ------------------------------------------------------------------------ */

[{selector}~="container"]
  a-modal()

  &[{selector}~="--top"]
    a-modal--top()

  &[{selector}~="--bottom"]
    a-modal--bottom()

  &[{selector}~="--left"]
    a-modal--left()

  &[{selector}~="--right"]
    a-modal--right()

  &[{selector}~="--slow"]
    a-modal--slow()

  &[{selector}~="--fast"]
    a-modal--fast()
