/* ------------------------------------------------------------------------ *\
   mixins.module.modal
\* ------------------------------------------------------------------------ */


/**
 * [modal description]
 * @return {[type]} [description]
 */
modal()
  align--block__content()
  z-index: $nix.z.over
  display: block
  overflow: hidden
  max-width: 800px
  width: 80%
  border-radius: $nix.borders.radius
  background-color: $nix.skin.color.white


/**
 * [modal__header description]
 * @return {[type]} [description]
 */
modal__header()
  position: relative
  text-align: center


/**
 * [modal__close description]
 * @return {[type]} [description]
 */
modal__close()
  top: .7em


/**
 * [modal__body description]
 * @return {[type]} [description]
 */
modal__body()
  padding--all--md()


/**
 * [modal__footer description]
 * @return {[type]} [description]
 */
modal__footer()
  padding--all--md()


/**
 * [block description]
 * @return {[type]} [description]
 */
modal__footer--block()
  grid()
  grid__cell--no-gutter()
  padding: $nix.sizes.lg 0 0 0


/**
 * [block description]
 * @return {[type]} [description]
 */
modal__footer-button--block()
  grid__cell()
  border-radius: 0


/**
 * [ghost description]
 * @return {[type]} [description]
 */
modal--ghost()
  background-color: transparent
  color: $nix.colors.white


/**
 * [ghost description]
 * @return {[type]} [description]
 */
modal__heading--ghost()
  color: $nix.colors.white


/**
 * [high description]
 * @return {[type]} [description]
 */
modal--high()
  box-shadow: $nix.shadows.solid--high


/**
 * [higher description]
 * @return {[type]} [description]
 */
modal--higher()
  box-shadow: $nix.shadows.solid--higher


/**
 * [highest description]
 * @return {[type]} [description]
 */
modal--highest()
  box-shadow: $nix.shadows.solid--highest
