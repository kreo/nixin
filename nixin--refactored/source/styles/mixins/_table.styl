/* ------------------------------------------------------------------------ *\
   mixins.component.table
\* ------------------------------------------------------------------------ */


@import "_padding"
@import "_text"
@import "_heading"

/**
 * [table description]
 * @return {[type]} [description]
 */
table()
  display: flex
  flex-wrap: wrap
  width: 100%
  margin: 0
  padding: 0
  border-collapse: collapse
  border-spacing: 0


/**
 * [table__caption description]
 * @return {[type]} [description]
 */
table__caption()
  padding--horizontal--sm()
  text--quiet()
  display: flex
  flex: 0 0 100%
  max-width: 100%
  font-size: $nix.text.font.size * .9
  text-align: left


/**
 * [table__row description]
 * @return {[type]} [description]
 */
table__row()
  display: flex
  flex-wrap: wrap
  flex: 0 0 100%
  max-width: 100%


/**
 * [striped description]
 * @return {[type]} [description]
 */
table__row--striped()
  background-color: $nix.skin.color.grey--light


/**
 * [table__cell description]
 * @return {[type]} [description]
 */
table__cell()
  padding--all--sm()
  display: flex
  flex: 1
  text-align: left
  overflow: auto


/**
 * [table__heading description]
 * @return {[type]} [description]
 */
table__heading()
  heading--xs()
  display: flex
  flex: 1
  font-weight: bold
  background-color: $nix.skin.color.light
  border-bottom: 1px solid $nix.skin.color.gray


/**
 * [striped description]
 * @return {[type]} [description]
 */
table__heading--striped()
  background-color: initial


/**
 * [clickable description]
 * @return {[type]} [description]
 */
table-clickable()
  color: $nix.skin.color.primary
  cursor: pointer


/**
 * [inactive description]
 * @return {[type]} [description]
 */
table--inactive()
  text--quiet()
  cursor: default


/**
 * [inactive description]
 * @return {[type]} [description]
 */
table--clickable--inactive()
  text--quiet()
  cursor: not-allowed


/**
 * [condensed description]
 * @return {[type]} [description]
 */
table--condensed()
  font-size: $nix.text.font.size * .9


/**
 * [condensed description]
 * @return {[type]} [description]
 */
table__cell--condensed()
  padding--all--xs()
