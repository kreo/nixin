/* ------------------------------------------------------------------------ *\
   mixins.component.tree
\* ------------------------------------------------------------------------ */


@import "_padding"


/**
 * [tree description]
 * @return {[type]} [description]
 */
tree()
  padding--all--0()
  display: block
  margin: 0
  list-style: none


/**
 * [nested description]
 * @return {[type]} [description]
 */
tree--nested()
  padding: 0 0 0 $nix.sizes.md


/**
 * [tree__item description]
 * @return {[type]} [description]
 */
tree__item()
  padding--all--0()

  &:before
    content: "â€“"
    display: inline-block
    padding: 0 $nix.sizes.sm 0 0
    color: $nix.skin.color.light
    transform-origin: 30% 50%


/**
 * [expandable description]
 * @return {[type]} [description]
 */
tree__item--expandable()
  &:before
    color: $nix.skin.color.gray
    content: "\276F"


/**
 * [expanded description]
 * @return {[type]} [description]
 */
tree__item--expanded()
  &:before
    color: $nix.skin.color.light
    content: "\276F"
    transform: rotate(90deg)
