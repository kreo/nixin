/* ------------------------------------------------------------------------ *\
   mixins.component.debug
\* ------------------------------------------------------------------------ */


@import "_position"


/**
 * [debug description]
 * @return {[type]} [description]
 */
debug()
  position(fixed null null 0 0)
  display: block
  margin: 0
  padding: 0 20px
  width: 100%
  color: white
  text-align: left

  if !$nix.debug.mq
    display: none

  // else
  //   +u-mq--max("sm")
  //     text-align: center


/**
 * [debug__heading description]
 * @return {[type]} [description]
 */
debug__heading()
  color: $nix.skin.color.white
  font-size: 18px


/**
 * [debug__close description]
 * @return {[type]} [description]
 */
debug__close()
  position(absolute 0 5px auto auto)
  display: block
  line-height: $nix.typography.line-height

  .icon
    color: $nix.skin.color.white


debug--xxs()
  background: $nix.palette.orange.light--30


debug--xs()
  background: $nix.palette.orange.light--20


debug--sm()
  background: $nix.palette.orange.light--10


debug--md()
  background: $nix.palette.orange.core


debug--lg()
  background: $nix.palette.orange.dark--10


debug--xl()
  background: $nix.palette.orange.dark--20


debug--xxl()
  background: $nix.palette.orange.dark--30



