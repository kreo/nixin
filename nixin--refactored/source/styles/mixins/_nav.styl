/* ------------------------------------------------------------------------ *\
   mixins.component.nav
\* ------------------------------------------------------------------------ */


@import "_padding"
@import "_list"


/**
 * [nav description]
 * @return {[type]} [description]
 */
nav()
  list()
  list--unstyled()
  list--inline()
  width: 100%
  color: $nix.skin.color.white
  background-color: $nix.skin.color.black
  z-index: $nix.z.top


/**
 * [nav__item description]
 * @param  {[type]} bg-color: $nix.colors.primary [description]
 * @param  {[type]} fg-color: $nix.colors.white   [description]
 * @return {[type]}           [description]
 */
nav__item(bg-color = $nix.skin.color.primary, fg-color = $nix.skin.color.white)
  padding--all--md()
  color: fg-color

  &:not(:disabled)
    &:hover
      background-color: bg-color

    &:focus
      box-shadow: inset 0 0 0 2px lighten($nix.skin.color.secondary, 20%)

    &:active
      background-color: darken(bg-color, 9)


/**
 * [inline description]
 * @return {[type]} [description]
 */
nav--inline()
  list--inline()


/**
 * [item description]
 * @return {[type]} [description]
 */
nav-inline__item()
  list--inline__item()


/**
 * [hover description]
 * @return {[type]} [description]
 */
nav__item--hover()
  background-color: darken($nix.skin.color.primary, 20%)
  cursor: pointer


/**
 * [active description]
 * @return {[type]} [description]
 */
nav__item--active()
  background-color: darken($nix.skin.color.primary, 30%)


/**
 * [right description]
 * @return {[type]} [description]
 */
nav__item--right()
  float: right


/**
 * [top description]
 * @return {[type]} [description]
 */
nav--top()
  position(fixed 0 0 auto 0)


/**
 * [bottom description]
 * @return {[type]} [description]
 */
nav--bottom()
  position(fixed auto 0 0 0)


/**
 * [left description]
 * @return {[type]} [description]
 */
nav--left()
  position(fixed 0 auto 0 0)


/**
 * [right description]
 * @return {[type]} [description]
 */
nav--right()
  position(fixed 0 0 0 auto)


/**
 * [high description]
 * @return {[type]} [description]
 */
nav--high()
  box-shadow: $nix.shadows.solid--high


/**
 * [higher description]
 * @return {[type]} [description]
 */
nav--higher()
  box-shadow: $nix.shadows.solid--higher


/**
 * [highest description]
 * @return {[type]} [description]
 */
nav--highest()
  box-shadow: $nix.shadows.solid--highest
