/* ------------------------------------------------------------------------ *\
   mixins.component.link
\* ------------------------------------------------------------------------ */


/**
 * [color description]
 * @param  {[type]} fg-color: $nix.color.dark-primary [description]
 * @return {[type]}           [description]
 */
link--color(fg-color = $nix.skin.color.primary)
  color: fg-color
  background-color: transparent

  &:visited
    color: darken(fg-color, $nix.skin.tint)


  &:hover
    color: lighten(fg-color, $nix.skin.tint)


  &:active
    color: lighten(fg-color, $nix.skin.tint)


/**
 * [link description]
 * @return {[type]} [description]
 */
link()
  link--color()
  text-decoration: none
  cursor: pointer

  &:hover
    text-decoration: underline
