// element.button
// ------------------------------------------   
.button
  display: inline-block
  margin-bottom: 0
  padding: 6px 14px
  font-weight: 600
  text-align: center
  vertical-align: middle
  touch-action: manipulation
  cursor: pointer
  background-image: none
  border: 1px solid rgba(0, 0, 0, 0)
  white-space: nowrap
  -webkit-font-smoothing: antialiased
  font-size: 14px
  font-weight: 700
  line-height: 1.42857
  border-radius: 4px
  user-select: none
  background: transparent
  
.button--sm
  padding: 5px 10px
  font-size: 12px
  line-height: 1.5
  
  .icon
    font-size: 12px    


button--set(success, color.green, color.green--dark)
button--set(warning, color.orange, color.orange--dark)   
button--set(danger, color.red, color.red--dark)   
button--set(info, color.cyan, color.cyan--dark) 