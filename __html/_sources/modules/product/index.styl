// ------------------------------------------
// module.product
// ------------------------------------------
.products
  position: relative
  display: block
  width: 100%
  padding: 0 40px

  .products__cell
    display: block
    width: 100%


// product--grid
// ------------------------------------------
.products--grid
  .products__cell
    box-sizing: content-box
    display: inline-block
    width: 50%
    margin: -1px -2.5px

    @media (min-width: app.breakpoint.xxxs)
      width: 100%

    @media (min-width: app.breakpoint.xxs)
      width: 100%

    @media (min-width: app.breakpoint.xs)
      width: 50%

    @media (min-width: app.breakpoint.md)
      width: 33.333333%

    @media (min-width: app.breakpoint.lg)
      width: 25%

    @media (min-width: app.breakpoint.xl)
      width: 16.666666%

    @media (min-width: app.breakpoint.xxl)
      width: 11.111111%
        

// product--list
// ------------------------------------------
.products--list
  .products__cell
    display: block
    width: 100%

    .product
      height: auto

  .product__media,
  .product__info
    float: left

  .product__media
    display: inline-block
    width: 25%
    border-right: 1px solid app.color.white--bronze

    .overlay
      height: 100%

  .product__info
    display: inline-block
    width: 75%
    padding: 20px
    font-size: 16px

    .pricing
      font-size: 21px

    .pricing__deal
      height: 25px
      line-height: 25px
      font-size: 16px

    .description
      max-height: none

  .product__caption
    display: block
    position: relative

    .inner
      padding: 15px 0


// product
// ------------------------------------------
.product
  display: inline-block
  position: relative
  overflow: hidden
  width: 100%
  height: 365px
  margin: 0
  padding: 0
  cursor: pointer
  vertical-align: top
  background: app.color.white
  text-align: left
  color: app.color.gray--light
  font-weight: 400
  border: 1px solid app.color.white--bronze

  &:after
    content: ""
    width: 100%
    height: 100%
    position: absolute
    left: 0
    top: 0
    background: linear-gradient(transparent 250px, white)

  &:hover
    text-decoration: none
    cursor: default
    
    .overlay,
    .product__caption
      display: block
    
    .badge
      display: none
      

// product__media    
.product__media 
  display: block   
  position: relative
  z-index: 5
  overflow: visible
  zoom: 1
  width: 100%
  height: 205px
  padding: 15px 0
  margin-top: 0
  user-select: none
  
  .image
    display: inline-block
    position: absolute
    top: 50%
    left: 50%
    transform: translate3d(-50%, -50%, 0)
    width: auto
    max-width: 100%
    max-height: 205px
    padding: 15px

  .overlay
    display: none
    color: app.color.white

    
// product__caption  
.product__caption
  display: none
  position: absolute
  bottom: 0
  width: 100%
  height: 50px
  padding: 0
  border-top: 1px solid app.color.white
  background-image: linear-gradient(rgba(255,255,255,0.75), app.color.white)
  
  .inner
    padding: 10px 5px
  
  .button
    padding: 5px 10px
    text-transform: uppercase
    text-decoration: none
    letter-spacing: 0.1em
    line-height: 20px
  
  .button--icon
    padding: 5px 2px
    font-size: 20px
    
    .icon
      position: relative
      top: -2px
    
  .button--favorite
    margin-left: 5px
    color: app.color.orange
    
    &:hover
      color: app.color.orange--dark
      
  .button--detail
    color: app.color.cyan
    
    &:hover
      color: app.color.cyan--dark
    
      
  .button--sub,
  .button--add
    display: inline-block
    margin-right: 5px
    
  .button--add
    margin-right: 10px
  
  .right
    float: right
    position: relative
    right: 0
    


// product__info
.product__info
  min-height: 61px
  padding: 5px 15px 0 15px
  margin-bottom: 4px
  font-size: 15px
  line-height: 1.456789em
  background: app.color.white
  
  .pricing
    display: inline-block
    margin-bottom: 4px
    color: app.color.black
    font-size: 17px
    font-weight: 600
    
  .pricing__new
    font-weight: bold
    
  .pricing__old
    display: inline-block
    padding-left: 5px
    text-decoration: line-through
    font-weight: 400
    color: app.color.gray--light
    
  .pricing__deal
    height: 20px
    line-height: 20px
    background-color: #fff
    color: app.color.red
    text-align: left
    font-weight: 700
    font-size: 13px
    letter-spacing: 0.01em
    text-shadow: none
    
  .description
    max-height: 60px
    overflow: hidden
    display: block
    text-overflow: ellipsis
    text-align: justify
    
  .description__text
    margin-bottom: 2px
    color: app.color.gray
    -webkit-hyphens: auto
    -moz-hyphens: auto
    -ms-hyphens: auto
    hyphens: auto
    word-break: break-all
    
  .description__size  
    color: app.color.gray--light
    


// is-mobile
// -----------------------------------
.is-mobile   
  .product,
  .product__media
    height: auto
    
  .product__caption, 
  .product__info,
  .product__media .image 
    display: block
    position: static    

  .product__media
    .image
      transform: none
      margin: 0 auto
  
  .product__info
    .description
      margin-bottom: 25px



// Effeckts
[class*="hvr-"]
  &:before
    z-index: 50
    background: app.color.orange--light
     