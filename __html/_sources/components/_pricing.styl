/* ------------------------------------------------------------------------ *\
   components.pricing
\* ------------------------------------------------------------------------ */


.pricing
	display: inline-block
	margin-bottom: 5px
	color: $color--black
	font-size: 19px
	font-weight: 600

.pricing__new
	font-weight: bold

.pricing__old
	display: inline-block
	padding-left: 5px
	text-decoration: line-through
	font-weight: 400
	color: $color--grayLight

.pricing__deal
	height: 25px
	line-height: 25px
	background-color: $color--white
	color: $color--red
	text-align: left
	font-weight: 700
	font-size: 15px
	letter-spacing: 0.01em
	text-shadow: none