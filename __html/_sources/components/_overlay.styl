   components.overlay
\* ------------------------------------------------------------------------ */


.overlay
  display: inline-block
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 155px
  font-weight: 300
  color: $color--white
  background: $color--brownDarker
  background: rgba($color--brownDarker, 0.5)

  .inner
    Align--center()

  .icon
    font-size: 32px


.overlay__heading
  display: block
  font-size: 40px
  text-align: center
  line-height: 38px


.overlay__label
  display: block
  text-align: center
  font-size: 16px