.form--search
	display: inline-block
	position: relative

	::-webkit-input-placeholder
		color: #DBB361

	:-moz-placeholder
		color: #DBB361

	::-moz-placeholder
		color: #DBB361

	:-ms-input-placeholder
		color: #DBB361

	.form__field
		-webkit-appearance: textfield
		-webkit-box-sizing: border-box
		-moz-box-sizing: border-box
		box-sizing: border-box
		width: 100%
		height: 34px
		padding: 10px
		margin: 0
		background-position: left 14px center
		font-size: 16px
		font-weight: normal
		line-height: 22px
		border-radius: 3px
		box-shadow: none
		color: #6D5441
		border: 1px solid #FCC72E
		background: linear-gradient(180deg,#fff 0,#fefefe 49%,#fdfdfd 0,#fefefe)

		&:hover
			border-color: #c69c24
			background: linear-gradient(180deg,#f8f9fb,#fefefe)
			box-shadow: inset 0 1px 2px rgba(0,0,0,.1)

		&:focus
			border-color: #c69c24
			box-shadow: inset 0 1px 1px rgba($color--black, .075), 0 0 3px rgba(#e3be02, .71)

	.button
		position: absolute
		top: 1px
		right: 1px
		padding: 2px 9px
		border-radius: 0 3px 3px 0
		font-size: 18px
		background: #F3EBD2
		color: #B99B18

