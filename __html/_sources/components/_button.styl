   components.button
\* ------------------------------------------------------------------------ */


.button
  display: inline-block
  margin-bottom: 0
  padding: 6px 14px
  text-align: center
  vertical-align: middle
  touch-action: manipulation
  cursor: pointer
  background-image: none
  border: 1px solid rgba(0, 0, 0, 0)
  border-radius: 4px
  white-space: nowrap
  -webkit-font-smoothing: antialiased
  font-size: 14px
  font-weight: 700
  line-height: 1.456789
  user-select: none
  background: transparent


.button--sm
  padding: 5px 9px
  font-size: 12px
  line-height: 1.5
  
  .icon
    font-size: 12px


.button--md
  padding: 8px 13px
  font-size: 14px
  line-height: 1.5

  .icon
    font-size: 14px


Button(success, $color--green, $color--greenDark)
Button(warning, $color--orange, $color--orangeDark)
Button(danger, $color--red, $color--redDark)
Button(info, $color--cyan, $color--cyanDark)