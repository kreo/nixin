.button
  display: inline-block
  margin-bottom: 0
  padding: 6px 14px
  font-weight: 600
  text-align: center
  vertical-align: middle
  touch-action: manipulation
  cursor: pointer
  background-image: none
  border: 1px solid rgba(0, 0, 0, 0)
  white-space: nowrap
  -webkit-font-smoothing: antialiased
  font-size: 14px
  font-weight: 700
  line-height: 1.42857
  border-radius: 4px
  user-select: none
  background: transparent
  
.button--sm
  padding: 5px 10px
  font-size: 12px
  line-height: 1.5
  
  .icon
    font-size: 12px    


Button(success, app.color.green, app.color.green--dark)
Button(warning, app.color.orange, app.color.orange--dark)
Button(danger, app.color.red, app.color.red--dark)
Button(info, app.color.cyan, app.color.cyan--dark)