/* ------------------------------------------------------------------------ *\
   components.carousel
\* ------------------------------------------------------------------------ */


.carousel
	position: relative
	clear: both
	width: 100%
	margin-bottom: 70px

	.slick-next.slick-disabled,
	.slick-prev.slick-disabled
		display: none
		opacity: .25

	&__controls
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: calc(100% - 30px) // height - margin-bottom of carousel
		margin-top: 0

		&:not(.carousel__controls--topRight)
			display: none

		.carousel__prev,
		.carousel__next
			position: absolute
			top: 50%
			z-index: $z--top
			width: 40px
			height: 364px
			margin-top: 15px
			padding: 0
			font-family: $font--simpleLine
			font-size: 40px
			text-align: center
			border-width: 1px
			border-style: solid
			Color($color--orangeLight)

			&:before
				visibility: visible
				opacity: .75
				font-size: 36px
				font-family: $font--simpleLine
				font-weight: bold
				line-height: 1
				Color($color--orangeLight)

			&:focus,
			&:hover
				Color($color--orangeLight)

				&:before
					Color($color--orangeLight)

			&.slick-disabled, &.slick-disabled:before
				opacity: .25

		.carousel__prev
			left: -1px
			border-left: none

			&:before
				content: "\e605"

		.carousel__next
			right: -1px
			border-right: none

			&:before
				content: "\e606"

			.loading .spinner
				width: 4em
				height: 4em
				border-left-color: $color--white
				background: transparent
				position: absolute
				top: 0
				left: 0
				right: 0
				bottom: 0
				margin: auto


		&--center
			.carousel__next
				border-radius: 50% 0 0 50%

				&:before
					margin-left: 10px

			.carousel__prev
				border-radius: 0 50% 50% 0

				&:before
					margin-right: 10px

			.carousel__next,
			.carousel__prev
				width: 60px
				height: 70px

		&--out
			../
				padding: 0
			.carousel__next
				right: -20px
			.carousel__prev
				left: -20px

		&--topRight
			top: 0
			right: -1px
			width: 78px
			margin-top: 0
			left: auto
			bottom: auto

			.carousel__prev,
			.carousel__next
				top: -40px
				width: 35px
				height: 40px
				margin-top: 0
				font-size: 30px
				border-radius: 2px

				&:before
					font-size: 26px





	&:hover
		.carousel__controls
			display: block

	&__items
		border-left: 1px solid $color--whiteBronze
		border-right: 1px solid $color--whiteBronze

		> *
			overflow: hidden
			border: none

	.slick-slide
		margin: 0 -1px

	.slick-slider
		position: relative
		padding: 0
		margin: 0 -2px

		&.slick-dotted
			margin-bottom: 0

	.slick-dots
		bottom: -40px

		li
			width: 15px
			height: 15px

			button
				width: 15px
				height: 15px
				border: 2px solid transparent
				border-radius: 50%

				&:before
					opacity: .5
					line-height: 15px
					color: $color--orange

			&.slick-active
				button
					border-color: $color--orange

					&:before
						color: transparent

	.loading
		top: 0
		left: 0
		right: 0
		padding-top: 35px
		min-height: 300px
		vertical-align: middle
		text-align: center
		color: #555
		font-weight: bold
		font-size: 18px